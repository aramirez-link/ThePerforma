---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---
<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <section class="mx-auto max-w-6xl px-6 pt-8">
    <div class="relative overflow-hidden rounded-[2rem] border border-white/15">
      <img src="/assets/img/069NewChip_4K.jpg" alt="" aria-hidden="true" class="h-[38vh] w-full object-cover opacity-40" />
      <div class="absolute inset-0 bg-[linear-gradient(180deg,rgba(7,7,11,0.28),rgba(7,7,11,0.9))]"></div>
      <div class="absolute inset-0 flex items-end p-8">
        <div>
          <p class="text-xs uppercase tracking-[0.34em] text-gold/90">{frontmatter.eyebrow}</p>
          <h1 class="mt-3 font-display text-4xl md:text-5xl">{frontmatter.title}</h1>
          <p class="mt-3 max-w-2xl text-sm text-white/75 md:text-base">{frontmatter.description}</p>
        </div>
      </div>
    </div>
  </section>
  <section class="mx-auto max-w-4xl px-6 py-16">
    <article class="rounded-[1.6rem] border border-white/15 bg-black/50 p-6 md:p-8 mt-2 space-y-6 text-base leading-relaxed text-white/80 shadow-[0_0_70px_rgba(243,211,139,0.08)]">
      <slot />
    </article>
  </section>
</BaseLayout>
