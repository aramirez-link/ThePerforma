---
const { title = "", subtitle = "", highlight = "" } = Astro.props;
---
<div class="group rounded-3xl border border-white/10 bg-white/5 p-6 backdrop-blur transition hover:border-white/30">
  {highlight && <p class="text-xs uppercase tracking-[0.3em] text-gold">{highlight}</p>}
  {title && <h3 class="mt-3 text-2xl font-semibold">{title}</h3>}
  {subtitle && <p class="mt-3 text-sm text-white/70">{subtitle}</p>}
  <div class="mt-6">
    <slot />
  </div>
</div>
