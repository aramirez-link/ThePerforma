---
import BaseLayout from "../../layouts/BaseLayout.astro";
import AdminTriviaConsole from "../../components/AdminTriviaConsole";
---
<BaseLayout
  title="Trivia Admin | The Performa"
  description="Configure shared trivia question bank and scheduled trivia campaigns for Link Up."
>
  <section class="mx-auto w-full max-w-6xl px-4 pt-8 sm:px-6">
    <div class="rounded-2xl border border-white/15 bg-black/45 p-3 backdrop-blur-md">
      <p class="px-2 text-[10px] uppercase tracking-[0.24em] text-white/55">Admin Console</p>
      <div class="mt-2 flex flex-wrap gap-2">
        <a href="/admin/trivia" class="min-h-10 rounded-full border border-gold/45 bg-gold/10 px-4 py-2 text-[10px] uppercase tracking-[0.2em] text-gold">Trivia</a>
        <a href="/admin/moderation" class="min-h-10 rounded-full border border-white/25 px-4 py-2 text-[10px] uppercase tracking-[0.2em] text-white/75 hover:border-white/45 hover:text-white">Moderation</a>
        <a href="/admin/store" class="min-h-10 rounded-full border border-white/25 px-4 py-2 text-[10px] uppercase tracking-[0.2em] text-white/75 hover:border-white/45 hover:text-white">Store</a>
      </div>
    </div>
  </section>
  <AdminTriviaConsole client:load />
</BaseLayout>
