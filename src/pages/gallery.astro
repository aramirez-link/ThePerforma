---
import BaseLayout from "../layouts/BaseLayout.astro";
import Section from "../components/Section.astro";
import MediaGrid from "../components/MediaGrid";
import gallery from "../../content/gallery.json";
---
<BaseLayout title="Gallery | The Performa" description="Press-ready imagery and stage moments.">
  <section class="mx-auto max-w-6xl px-6 pt-8">
    <div class="relative overflow-hidden rounded-[2rem] border border-white/15">
      <img src="/assets/img/0032ChipFiesta_4K.jpg" alt="" aria-hidden="true" class="h-[40vh] w-full object-cover opacity-40" />
      <div class="absolute inset-0 bg-[linear-gradient(180deg,rgba(7,7,11,0.3),rgba(7,7,11,0.9))]"></div>
      <div class="absolute inset-0 flex items-end p-8">
        <div>
          <p class="text-xs uppercase tracking-[0.34em] text-gold/90">Visual Archive</p>
          <h1 class="mt-3 font-display text-4xl md:text-5xl">Chip Lee - Stage Stills Vault</h1>
          <p class="mt-3 max-w-2xl text-sm text-white/75 md:text-base">Press-ready frames from Chip Lee - rehearsals, backstage rituals, and live ignition moments.</p>
        </div>
      </div>
    </div>
  </section>
  <Section eyebrow="Gallery" title="Stage Imagery" subtitle="High-resolution moments from Chip Lee's live shows, rehearsals, and backstage worlds.">
    <MediaGrid client:load items={gallery} />
  </Section>
</BaseLayout>
